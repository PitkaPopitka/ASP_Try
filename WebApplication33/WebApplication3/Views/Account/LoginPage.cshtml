@{
    Layout = "_Layout";
}

<div id="wrap">
    <div class="Login">
        <div class="Fields">
            @model LoginViewModel
            <form method="POST" action="@Url.Action("Login", "Account")">
                <div class="input-box">
                    <input type="text" name="Username" class="LoginField" autocomplete="off" required />
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <input type="password" name="Password" class="LoginField" autocomplete="off" required />
                    <label>Password</label>
                </div>
                <input class="LoginBtn" type="submit" value="Login" />
                <p id="orSignUp">Or</p>
                <a class="RegisterBtn" href="@Url.Action("RegisterPage", "Account")">
                    <p>Sign up</p>
                </a>
            </form>
        </div>
    </div>
</div>


<script src="~/js/bootstrap.min.js"></script>